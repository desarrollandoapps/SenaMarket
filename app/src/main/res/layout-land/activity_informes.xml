<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.desarrollandoapps.senamarket.informes.InformesActivity">

    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btnFlujoNetoCaja"
            android:layout_width="match_parent"
            android:text="Flujo neto de caja"
            android:src="@drawable/flujo_caja"
            android:layout_gravity="center"
            android:background="#00ffffff"
            android:layout_weight="0.5"
            android:onClick="lanzarFlujoNeto"/>
        <ImageButton
            android:id="@+id/btnEstadoCartera"
            android:src="@drawable/estado_cartera"
            android:background="#00ffffff"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:onClick="lanzarEstadoCartera"
            android:layout_weight="0.5" />

        <ImageButton
            android:id="@+id/btnEstadoNegocio"
            android:background="#00ffffff"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:onClick="lanzarEstadoNegocio"
            android:src="@drawable/estado_negocio" />

        <ImageButton
            android:id="@+id/btnCuentasPorPagar"
            android:src="@drawable/cuentas_por_pagar"
            android:background="#00ffffff"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:onClick="lanzarCuentasPorPagar"
            android:layout_weight="0.5" />
    </TableRow>

</TableLayout>
