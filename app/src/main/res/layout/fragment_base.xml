<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.desarrollandoapps.senamarket.configuracion.BaseFragment">

    <TextView
        android:text="Valor de la base de la caja:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textAlignment="center"
        android:paddingTop="10dp" />

    <TextView
        android:text="Valor actual: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblBaseActual"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:digits="0123456789.,"
        android:ems="10"
        android:id="@+id/txtMontoBase"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:textSize="24sp" />

    <Button
        android:text="Aceptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAgregarBase"
        android:paddingTop="10dp" />
</LinearLayout>
