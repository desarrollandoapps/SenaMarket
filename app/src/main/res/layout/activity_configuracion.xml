<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_configuracion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.desarrollandoapps.senamarket.configuracion.ConfiguracionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Cambiar base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtModificarBase"
                android:onClick="cambiarBase"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:text="Hacer copia de seguridad en dispositivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBackupSD"
                android:onClick="exportarDBaSD"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:text="Hacer copia de seguridad en e-mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBackupMail"
                android:onClick="enviarMail"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:text="Restaurar copia de seguridad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtRestaurarDB"
                android:onClick="importarDB"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
