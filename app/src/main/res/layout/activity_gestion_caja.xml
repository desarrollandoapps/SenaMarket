<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.desarrollandoapps.senamarket.MainActivity">

    <TableRow android:layout_width="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/btnEfectivoEnCaja"
        android:layout_width="match_parent"
        android:src="@drawable/efectivo_en_caja"
        android:onClick="abrirEfectivoEnCaja"
        android:background="#00ffffff"
        android:layout_gravity="center"
        android:layout_weight="0.5" />
    <ImageButton
        android:id="@+id/btnOtrosIngresos"
        android:src="@drawable/otros_ingresos"
        android:background="#00ffffff"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:onClick="abrirOtrosIngresos" />
    </TableRow>

    <TableRow android:layout_width="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/btnEgresosNegocio"
        android:background="#00ffffff"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:src="@drawable/obligaciones"
        android:onClick="abrirObligaciones" />
        <ImageButton
        android:id="@+id/btnOtrosEgresos"
        android:src="@drawable/otros_egresos"
        android:background="#00ffffff"
        android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:onClick="abrirOtrasObligaciones" />
    </TableRow>

</TableLayout>

