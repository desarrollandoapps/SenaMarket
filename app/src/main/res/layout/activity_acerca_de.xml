<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acerca_de"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.desarrollandoapps.senamarket.AcercaDeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/logo_sena"
                    android:id="@+id/imageView3"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/logo_sennova"
                    android:id="@+id/imageView4"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:paddingTop="10dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/logo_gesicom"
                    android:id="@+id/imageView5"
                    android:layout_weight="1"
                    android:paddingTop="10dp" />

            </LinearLayout>

            <TextView
                android:text="SENA Regional Tolima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:layout_marginTop="20dp" />
            <TextView
                android:text="Centro de Comercio y Servicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textAlignment="center" />

            <TextView
                android:text='Sistema de información desarrollado en el marco del proyecto de investigación "Diseño de un modelo básico de gestión financiera y administrativa para las tiendas clasificadas como microempresas comerciales de la comuna 5 de la ciudad de Ibagué" de la línea de investigación ACAF (Gestión administrativa, contable y asistencia financiera).'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="Diseñado y desarrollado por\nJose Alonso Oviedo Monroy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:textAlignment="center"
                android:layout_marginTop="30dp" />

            <TextView
                android:text="Ibagué - Tolima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                android:textAlignment="center" />

            <TextView
                android:text="2016"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:textAlignment="center" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
